{%extends "::layout.html.twig"%}

{% block window  -%}
    <h3>Liste des Races</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Libelle</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libelle }}</td>
                <td><a href="{{ path('race_edit', { 'id': entity.id }) }}">Editer</a></td>
                <td><a href="{{ path('race_delete', { 'id': entity.id }) }}">Supprimer</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('race_new') }}">
                Ajouter
            </a>
        </li>
    </ul>
    {% endblock %}
