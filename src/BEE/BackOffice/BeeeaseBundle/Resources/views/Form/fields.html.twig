{% block form_row %}
{% spaceless %}
    <div class="form_row">
       <div class="col-sm-3"> 
        {{ form_label(form) }}
       </div>
        {{ form_errors(form) }}
       <div class="col-sm-4">  
        {{ form_widget(form) }}
       </div>  
       <div class="spacer-10"></div>
    </div>
       
{% endspaceless %}
{% endblock form_row %}
{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% endblock form_widget_simple %}
{% block checkbox_widget %}
{% spaceless %}
   {# <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />#}
    <label><input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} /><span></span></label>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {#{ block('form_widget_simple') }#}
        
        <div class="input-group date" id="datepicker-form-2" data-date="" data-date-format="mm/dd/yy" style="width:180px">
             <input {{ block('widget_attributes') }} class="form-control" size="16" type="date" value=""/>
             <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
         </div>
    
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year),
                '{{ month }}': form_widget(form.month),
                '{{ day }}':   form_widget(form.day),
            })|raw }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}   
    
{% block datepicker %}
{% spaceless %}
   <div class="input-group date" id="datepicker-form-2" data-date="12-02-2012" data-date-format="dd-mm-yyyy" style="width:180px">
        <input class="form-control" size="16" type="text" value="12-02-2012" disabled />
        <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
    </div>  

{% endspaceless %}
{% endblock datepicker %}
    
{% block choice_widget_collapsed %}
{% spaceless %}
    {% if required and empty_value is none and not empty_value_in_choices %}
        {% set required = false %}
    {% endif %}
    <select class = "form-control" {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}


{% block textarea_widget %}
{% spaceless %}
    <textarea class = "form-control" {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
{% endblock textarea_widget %}