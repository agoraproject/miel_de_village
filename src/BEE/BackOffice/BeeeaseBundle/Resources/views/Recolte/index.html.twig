{%extends "::layout.html.twig"%}

{% block headerTitle %}<h2>{{ headerTitle }}</h2>{% endblock %}

{% block window  -%}
<div class="inner-padding">  
      <table  class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Ruche</th>
                <th scope="col">Quantité</th>
                <th scope="col">Type de Récolte</th>
                <th scope="col">Nature de la Récolte</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               
                <td>{% if entity.date %}{{ entity.date|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.ruche }}</td>
                <td>{{ entity.qte ~ ' ' ~ entity.uniteQuantite }}</td>
                <td>{{ entity.typeRecolte }}</td>
                <td>{{ entity.natureRecolte }}</td>
                <td> <a href="{{path('recolte_show', {'id': entity.id})}}" class="btn btn-default">Show</a></td>
            
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recolte_new') }}" class="btn btn-default"style="margin:13px">Ajouter</a>
</div>
{% endblock %}
