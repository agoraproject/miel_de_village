{%extends "::layout.html.twig"%}

{% block window  -%}
    <h3>Liste des photos</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Chemin</th>
            
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.chemin }}</td>
                <td>  <a href="{{ path('photos_edit', { 'id': entity.id }) }}">Editer</a>
                <td>  <a href="{{ path('photos_delete', { 'id': entity.id }) }}">Supprimer</a>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('photos_new') }}">
                Ajouter
            </a>
        </li>
    </ul>
    {% endblock %}
