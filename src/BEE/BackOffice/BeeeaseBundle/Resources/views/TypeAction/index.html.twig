{%extends "::layout.html.twig"%}

{% block window  -%}
    <h3>Type d'action</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libelle }}</td>
                <td>   <a href="{{ path('typeaction_edit', { 'id': entity.id }) }}">Editer</a></td>
                <td>   <a href="{{ path('typeaction_delete', { 'id': entity.id }) }}">Supprimer</a></td>
            
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('typeaction_new') }}">
                Ajouter
            </a>
        </li>
    </ul>
    {% endblock %}
