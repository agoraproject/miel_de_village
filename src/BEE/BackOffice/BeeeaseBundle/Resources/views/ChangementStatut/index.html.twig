{%extends "::layout.html.twig"%}

{% block window  -%}
    <h3>Liste des changements de statut</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Date</th>
                <th>Ruche</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.date|date('d/m/Y') }}</td>
                <td>{{ entity.ruche }}</td>
                <td>{{ entity.statut }}</td>
                <td><a href="{{ path('changementstatut_edit', { 'id': entity.id }) }}">Editer</a></td>
                <td><a href="{{ path('changementstatut_delete', { 'id': entity.id }) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('changementstatut_new') }}">
                Ajouter
            </a>
        </li>
    </ul>
    {% endblock %}
